CONF_FILE='/etc/scatool/scatool.conf'
if [[ -s $CONF_FILE ]]
then
	. $CONF_FILE
else
	echo "Error: File not found -- $CONF_FILE"
	exit 1
fi
BIN_PATH='/usr/lib/sca/python'
SCA_READY="True"
export SCA_READY

python3 ${BIN_PATH}/scatool.py "$@"

